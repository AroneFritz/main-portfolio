# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourportfolio.com
NEXT_PUBLIC_SITE_NAME="Your Name - Portfolio"

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourportfolio.com

# Email Service (SendGrid example)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=your.email@example.com

# Contact Form
CONTACT_EMAIL=your.email@example.com

# Environment variables for portfolio deployment
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local development (SQLite)
DATABASE_URL="file:./dev.db"
# For Vercel deployment (PostgreSQL) - replace with your actual database URL
# DATABASE_URL="postgresql://username:password@hostname:port/database"

# JWT Secret for admin authentication (REQUIRED)
# Generate a secure random string for production
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Admin credentials for initial setup (REQUIRED)
ADMIN_EMAIL="admin@aronefritz.com"
ADMIN_PASSWORD="your-secure-admin-password"
ADMIN_NAME="Arone Fritz"

# Optional: Analytics (if using)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# CMS (if using Contentful, Sanity, etc.)
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token

# Social Media
NEXT_PUBLIC_GITHUB_USERNAME=yourusername
NEXT_PUBLIC_LINKEDIN_USERNAME=yourusername
NEXT_PUBLIC_TWITTER_USERNAME=yourusername

# Resume
NEXT_PUBLIC_RESUME_URL=/resume.pdf

# Calendly
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/yourusername
