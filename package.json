{
  "name": "portfolio-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "build:static": "cross-env NEXT_EXPORT=true next build",
    "export": "cross-env NEXT_EXPORT=true NODE_ENV=production next build",
    "deploy": "npm run export && gh-pages -d out",
    "github-pages": "npm run export && gh-pages -d out -b gh-pages",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "npx prisma db push --force-reset && npm run db:seed",
    "admin:reset-password": "tsx scripts/reset-admin-password.ts",
    "admin:update-password": "tsx scripts/update-admin-password.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^6.8.2",
    "@react-three/drei": "^10.1.1",
    "@react-three/fiber": "^9.1.2",
    "@types/three": "^0.176.0",
    "@vercel/analytics": "^1.5.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.15.0",
    "gray-matter": "^4.0.3",
    "gsap": "^3.13.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "next-pwa": "^5.6.0",
    "next-seo": "^6.8.0",
    "next-themes": "^0.4.6",
    "prisma": "^6.8.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.1",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.0",
    "three": "^0.176.0",
    "workbox-webpack-plugin": "^7.3.0",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "gh-pages": "^6.3.0",
    "multer": "^2.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
